                <ul class="navigation-list">
                    <% games.forEach(function(game){ %>
                        <li class="navigation-item">
                            <div class="navigation-item-static">
                                <dl>
                                    <dt><%= game.name %></dt>
                                    <dd>
                                    <% game.child.forEach(function(child){
                                        if(child['sport_show'] == 1) {
                                    %>
                                        <a href="/Game?keyword=<%= child.name%>"><%= child.name%></a>
                                    <%
                                        }
                                    })%>
                                    </dd>
                                </dl>
                            </div>
                            <div class="navigation-item-content">
                                <ul>
                                <% game.child.forEach(function(child){%>
                                    <li><a href="/Game?keyword=<%= child.name%>"><%= child.name%></a></li>
                                <% })%>
                                </ul>
                            </div>
                        </li>
                    <% }); %>
                </ul>
                <!-- && end -->
            </div>
            <div id="site-navigation">
                <ul class="site-navigation-list clearfix">
                    <li class="site-navigation-item"><a href="/" class="menu-root <% if(groupName == '/') {%>current<%}%>">首页</a></li>
